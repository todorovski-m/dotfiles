# Change the keyboard layouts
# https://superuser.com/questions/1147320/how-to-change-keyboard-layout-in-i3
# exec_always setxkbmap -layout us,mk -option grp:alt_shift_toggle

# sudo cp ~/Dropbox/Mirko/Razno/linux-settings/ru /usr/share/X11/xkb/symbols/ru
# see the end of ~/Dropbox/Mirko/Razno/linux-settings/ru
# modify /usr/share/X11/xkb/rules/evdev.xml
exec_always setxkbmap -layout "us,mk,ru" -variant ",,mkd" -option grp:alt_shift_toggle
bindsym $mod+Ctrl+m exec xkb-switch -s "mk"
bindsym $mod+Ctrl+e exec xkb-switch -s "us"
bindsym $mod+Ctrl+r exec xkb-switch -s "ru(mkd)"

# https://faq.i3wm.org/question/239/how-do-i-suspendlockscreen-and-logout/
# Shutdown menu
# in ~/.local/bin do this: ln -s ~/.config/i3/i3exit
#set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
     bindsym l exec --no-startup-id i3exit lock, mode "default"
     bindsym e exec --no-startup-id i3exit logout, mode "default"
     bindsym s exec --no-startup-id i3exit suspend, mode "default"
     #bindsym h exec --no-startup-id i3exit hibernate, mode "default"
     bindsym r exec --no-startup-id i3exit reboot, mode "default"
     bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

