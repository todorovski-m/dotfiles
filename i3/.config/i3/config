# Windows compositor
# config file: ~/.config/picom/picom.conf
# https://www.reddit.com/r/i3wm/comments/s59e7n/weird_picom_issues/
exec_always --no-startup-id sleep 3 && picom -b

set $mode_password (c) copy password, (t) type login and password
mode "$mode_password" {
    bindsym c exec "$HOME/.config/scripts/passScript.sh", mode "default"
    bindsym t exec "$HOME/.config/scripts/passScript.sh --type", mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_password"

